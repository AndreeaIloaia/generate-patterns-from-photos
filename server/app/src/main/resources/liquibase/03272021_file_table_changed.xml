<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="03272021_create_file" author="andreeai">
        <createTable tableName="file">
            <column name="id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="filename" type="varchar(128)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="size" type="int">
                <constraints unique="false"/>
            </column>
            <column name="garment_fk" type="int">
                <constraints foreignKeyName="fk_garment_file" referencedTableName="garment"
                             referencedColumnNames="id" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="04062021_add_constraint_autoincrement_file" author="andreeai">
        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          generationType="ALWAYS"
                          incrementBy="1"
                          schemaName="public"
                          tableName="file"/>
    </changeSet>

</databaseChangeLog>